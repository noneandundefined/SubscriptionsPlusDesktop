<UserControl x:Class="SubscriptionPlusDesktop.UI.Components.CreateSubModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubscriptionPlusDesktop.UI.Components"
             xmlns:controllers="clr-namespace:SubscriptionPlusDesktop.UI.Controllers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650"
             Visibility="Collapsed"
             Opacity="0">

    <UserControl.Resources>
        <controllers:StringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" Inverse="True" />
    </UserControl.Resources>
    
    <Grid x:Name="Root"
          Background="#80000000"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          MouseDown="Root_MouseDown">

        <Border x:Name="Dialog"
                Background="#fff"
                BorderBrush="#999"
                BorderThickness="1"
                CornerRadius="12"
                Width="450"
                MaxWidth="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20,15,15,15" BorderBrush="#ccc" BorderThickness="0,0,0,1" Margin="0,0,0,20">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Добавление подписки" 
                                       Grid.Column="0" 
                                       Foreground="#000"
                                       FontWeight="Medium"
                                       FontSize="15"/>

                            <Image Grid.Column="1" 
                                   Source="pack://application:,,,/Public/ico/x.png" 
                                   MaxWidth="19" 
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   MouseLeftButtonUp="Close_Click"
                                   Cursor="Hand">

                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>

                            </Image>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Padding="15,0,15,15">
                        <StackPanel>
                            <TextBlock Text="Название подписки" 
                                       Foreground="#777"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>

                            <Border Background="#fff"
                                    BorderBrush="#ccc"
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="4">
                                <Grid>
                                    <TextBox x:Name="SubNameBox"
                                             Background="Transparent" 
                                             Foreground="#000"
                                             BorderThickness="0"
                                             FontSize="14" 
                                             Padding="3"
                                             CaretBrush="#000"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Padding="15,0,15,15">
                        <StackPanel>
                            <TextBlock Text="Стоимость подписки" 
                                       Foreground="#777"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>

                            <Border Background="#fff"
                                    BorderBrush="#ccc"
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="4">
                                <Grid>
                                    <TextBox x:Name="SubPriceBox"
                                             Background="Transparent" 
                                             Foreground="#000"
                                             BorderThickness="0"
                                             FontSize="14" 
                                             Padding="3"
                                             CaretBrush="#000"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="3" Padding="15,0,15,15">
                        <StackPanel>
                            <TextBlock Text="Дата платежа подписки" 
                                       Foreground="#777"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>

                            <Border Background="#fff"
                                    BorderBrush="#ccc"
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="4">
                                <Grid>
                                    <DatePicker x:Name="SubDatePayPicker"
                                                Background="Transparent"
                                                Foreground="#000"
                                                BorderThickness="0"
                                                FontSize="14"
                                                SelectedDate="{x:Static sys:DateTime.Now}"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="4" Padding="15,0,15,15">
                        <StackPanel>
                            <TextBlock Text="Категория подписки" 
                                       Foreground="#777"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>

                            <ComboBox x:Name="CategoryComboBox"
                                      Background="#fff"
                                      Foreground="#000"
                                      BorderBrush="#ccc"
                                      Padding="14"
                                      BorderThickness="1"
                                      FontSize="14"
                                      SelectionChanged="CategoryComboBox_SelectionChanged">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Padding" Value="6,4"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                                <ComboBox.Template>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <Border Background="White"
                                                    BorderBrush="#ccc"
                                                    BorderThickness="1"
                                                    Padding="16"
                                                    CornerRadius="6"
                                                    MouseLeftButtonUp="Border_MouseLeftButtonUp"
                                                    Cursor="Hand"/>

                                            <ContentPresenter Margin="6,2,25,2"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left"
                                                              Content="{TemplateBinding SelectionBoxItem}"/>

                                            <Popup Placement="Bottom"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   AllowsTransparency="True"
                                                   HorizontalAlignment="Stretch"
                                                   Focusable="False"
                                                   PopupAnimation="Slide"
                                                   MinWidth="{TemplateBinding ActualWidth}">
                                                <Border Background="White"
                                                        BorderBrush="#ccc"
                                                        BorderThickness="1"
                                                        CornerRadius="6">
                                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True"/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </ComboBox.Template>
                            </ComboBox>

                            <Border x:Name="CustomCategoryBorder" 
                                    Background="#fff" 
                                    BorderBrush="#ccc" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="4" 
                                    Margin="0,5,0,0" 
                                    Visibility="Collapsed">
                                <TextBox x:Name="CustomCategoryTextBox"
                                         Background="Transparent"
                                         Foreground="#000"
                                         BorderThickness="0"
                                         FontSize="14"
                                         Padding="3"
                                         CaretBrush="#000"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="5" Margin="15,0,15,15"
                            CornerRadius="6"
                            Padding="10"
                            Cursor="Hand"
                            MouseLeftButtonUp="AddSub_MouseLeftButtonUp">
                        <TextBlock Text="Добавить" 
                                   Foreground="#fff"
                                   TextAlignment="Center"
                                   FontWeight="Medium"
                                   FontSize="13"/>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#000" />

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#222" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
