<UserControl x:Class="SubscriptionPlusDesktop.UI.Components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubscriptionPlusDesktop.UI.Components"
             xmlns:controllers="clr-namespace:SubscriptionPlusDesktop.UI.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">

    <UserControl.Resources>
        <controllers:StringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" Inverse="True" />
        <controllers:GreetingTimeConverter x:Key="GreetingTimeConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20,0,20,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Foreground="#000" 
                   Text="{Binding ., Converter={StaticResource GreetingTimeConverter}}"
                   FontWeight="Medium"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="21"
                   Margin="0,0,0,30"/>

        <Border Grid.Row="1"
                 Background="#fff"
                 BorderBrush="#ccc"
                 BorderThickness="1"
                 CornerRadius="10" 
                 Padding="10,5,10,5">
            <Grid>
                <TextBox x:Name="SearchSubBox" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" 
                                 Foreground="#000"
                                 BorderThickness="0"
                                 FontSize="14" 
                                 Padding="7"
                                 CaretBrush="#000"/>

                <TextBlock Text="Поиск подписок"
                            Foreground="#999"
                            FontSize="14"
                            Padding="8,0,8,0"
                            IsHitTestVisible="False"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1"
                            Visibility="{Binding Text, ElementName=SearchSubBox, 
                                        Converter={StaticResource InverseStringToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
